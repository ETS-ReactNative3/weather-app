{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"checkJs": true,
		"experimentalDecorators": true,
		"jsx": "react-native",
		"lib": ["dom", "esnext"],
		"moduleResolution": "node",
		"target": "esnext",
		"esModuleInterop": true,
		"isolatedModules": true,
		"noEmit": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"baseUrl": "./",
		"paths": {
			"@weather/*": ["./*"],
			"assets/*": ["./assets/*"],
			"screens/*": ["./screens/*"],
			"sqlite/*": ["./sqlite/*"]
		}
	},
	"exclude": ["node_modules", "babel.config.js", "metro.config.js", "dist", "coverage", "builds"]
}
